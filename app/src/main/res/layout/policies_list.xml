<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="#F3F3F3"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/application_id_background"
            android:id="@+id/tvPolicyApplicationId"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="Application Id: L991314" />
        <TextView
            android:id="@+id/tvPolicyApplicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"

            android:layout_margin="@dimen/application_id_background"
            android:text="Ravi Sahu" />
        <TextView
            android:id="@+id/tvPolicyPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/application_id_background"
            android:layout_marginBottom="@dimen/application_id_background"
            android:text="12-12-2017" />
    </LinearLayout>
</androidx.cardview.widget.CardView>