<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="#F3F3F3"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/application_id_background"
            android:id="@+id/tvPolicyApplicationId"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="L991314" />
        <TextView
            android:id="@+id/tvPolicyApplicantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_of_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/application_id_background"
            android:text="Ravi Sahu" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/application_id_background"
            android:layout_marginTop="@dimen/application_id_background"
            android:layout_marginBottom="@dimen/application_id_background"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="13dp"
                android:text="Status: " />

            <TextView
                android:id="@+id/tvPolicyPurchaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="13dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccentDark"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>