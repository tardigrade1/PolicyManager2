<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F3F3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPolicyApplicationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/application_id_background"
                android:text="L991314"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tvPolicyApplicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/application_id_background"
                android:layout_marginTop="5dp"
                android:text="Ravi Sahu"
                android:textSize="@dimen/font_size_of_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/application_id_background"
                android:layout_marginTop="@dimen/application_id_background"
                android:layout_marginBottom="@dimen/application_id_background"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="13dp"
                    android:text="Status: " />

                <TextView
                    android:id="@+id/tvPolicyPurchaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>