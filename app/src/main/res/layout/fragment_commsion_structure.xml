<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CommsionStructureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="@dimen/activity_horizontal_margin_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic structure of commission is:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_single"
            android:layout_marginRight="@dimen/activity_horizontal_margin_single"
            android:background="#B1B0B0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Type of Card" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Axix Bank" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_single"
            android:layout_marginRight="@dimen/activity_horizontal_margin_single"
            android:background="#B1B0B0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:text="Signature Card" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:textColor="#000"
                android:text="₹ 800/- per card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_single"
            android:layout_marginRight="@dimen/activity_horizontal_margin_single"
            android:background="#B1B0B0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:text="Platinum Card" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:textColor="#000"
                android:text="₹ 300/- per card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_single"
            android:layout_marginRight="@dimen/activity_horizontal_margin_single"
            android:background="#B1B0B0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:text="Activation in 30 days" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Add 1 ₹100 per card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_single"
            android:layout_marginRight="@dimen/activity_horizontal_margin_single"
            android:background="#B1B0B0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
               android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:text="Activation in 45 days" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:padding="5dp"
                android:textColor="#000"
                android:text="Add 1 ₹50 per card" />


        </LinearLayout>
        <TextView
            android:layout_margin="@dimen/activity_horizontal_margin_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Commission paid directly to your account near about 20th of every month on the cards issued during previous month &amp; details to your email" />
    <TextView
            android:layout_margin="@dimen/activity_horizontal_margin_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Besides above Attractive Competitions are floated time to time." />

    </LinearLayout>
</FrameLayout>